<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="viewModel"
            type="com.client_leger.colorimage.album.view_model.AlbumsViewModel"/>
    </data>

    <com.client_leger.colorimage.album.view.MaskedCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="26dp"
        android:onClick="@{clickListener}"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_Album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="@{viewModel.isOwner ? View.VISIBLE : View.GONE }"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_Album"
                app:srcCompat="@drawable/ic_delete_foreground" />

            <ImageView
                android:id="@+id/leave"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="@{!viewModel.isOwner &amp;&amp; !viewModel.isPublic ? View.VISIBLE : View.GONE }"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_Album"
                app:srcCompat="@drawable/ic_leave_foreground" />

            <LinearLayout
                android:id="@+id/album_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:maxWidth="500dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_Album"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/album_image"
                    android:layout_width="@dimen/icon"
                    android:layout_height="@dimen/icon"
                    android:contentDescription="@string/drawing"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:src="@drawable/open_album"/>

                <TextView
                    android:id="@+id/album_name"
                    android:layout_width="wrap_content"
                    android:scrollbars="horizontal"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@{viewModel.albumName}"
                    android:textSize="20sp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="15dp"
                android:clickable="true"
                android:gravity="start"
                android:maxHeight="50dp"
                android:scrollbars="vertical"
                android:text="@{viewModel.description}"
                android:textAppearance="?attr/textAppearanceSubtitle2"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/album_wrapper"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


            <ImageView
                android:id="@+id/edit"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:clickable="true"
                app:layout_constraintEnd_toStartOf="@+id/delete"
                app:layout_constraintTop_toBottomOf="@id/image_Album"
                app:srcCompat="@drawable/ic_edit_foreground"
                app:visibility="@{viewModel.isOwner ? View.VISIBLE : View.GONE }"
                tools:ignore="SpeakableTextPresentCheck" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.client_leger.colorimage.album.view.MaskedCardView>
</layout>
